<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@android:color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_badge"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:contentDescription="Team"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_name_team"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_badge"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="PSSI" />

    <TextView
        android:id="@+id/tv_country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_badge"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_team"
        tools:text="Indonesia" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_badge"
        app:layout_constraintTop_toBottomOf="@+id/tv_country"
        tools:text="Turf Moor is a football stadium in Burnley, Lancashire, England. It is the home ground of Premier League side Burnley Football Club, who have played there since moving from its Calder Vale ground in 1883. The stadium, which is situated on Harry Potts Way, named so after the club's longest serving Manager, has a capacity of 21,401, all seated. It was one of the last remaining stadiums in England to have the players' tunnel and dressing rooms behind one of the goals, until it was covered for seating in time for the 2014-15 Premier League season and rebuilt between the David Fishwick and James Hargreaves stand. The ground originally consisted of just a pitch and the first grandstand was not built until 1885. Six years after this, the \&quot;Star\&quot; stand was erected and terracing was later added to the ends of the ground. After the Second World War, the stadium was redeveloped with all four stands being rebuilt. During the 1990s, the ground underwent further refurbishment w" />

    <TextView
        android:id="@+id/tv_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_badge"
        tools:text="1." />
</androidx.constraintlayout.widget.ConstraintLayout>